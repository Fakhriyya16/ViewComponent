@model IEnumerable<CategoryProductVM>
@{
    ViewData["Title"] = "Index";
}
<h2 class="text-center mt-3">Categories</h2>
<a class="btn btn-success text-white btn-md mx-3" asp-action="Create"><i class="ti-plus"></i></a>
<table class="table table-hover mt-2 mx-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created Date</th>
            <th>Product Count</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="category-data">
                <td>
                    <div class="d-inline-block align-middle">
                        <p>@item.CategoryName</p>
                    </div>
                </td>
                <td>@item.CreatedDate</td>
                <td>@item.ProductCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary text-white btn-sm"><i class="ti-info-alt"></i></a>
                    <a class="btn btn-warning text-white btn-sm"><i class="ti-pencil"></i></a>
                    <form method="post" asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                        <button type="submit" class="btn btn-danger text-white btn-sm"><i class="ti-trash"></i></button>
                    </form>
                    <a class="btn btn-secondary text-white btn-sm add-archive" data-id="@item.Id"><i class="ti-archive"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section js{
    <script src="~/Admin/assets/js/archive.js"></script>
}